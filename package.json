{
  "name": "microblogger",
  "version": "0.0.1",
  "description": "A simple web interface to manage microblog content",
  "main": "index.js",
  "scripts": {
    "start": "npm run build:watch & npm run browsersync",
    "browsersync": "browser-sync start -f ./docs -s ./docs",
    "build": "browserify src/main.js -t babelify -t vueify -o ./docs/js/main.js && cp index.html docs/",
    "build:watch": "watchify src/main.js -t babelify -t vueify -o ./docs/js/main.js",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GarthDB/microblogger.git"
  },
  "keywords": [
    "microblog"
  ],
  "author": "Garth Braithwaite <garthdb@gmail.com> (http://garthdb.com)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/GarthDB/microblogger/issues"
  },
  "homepage": "https://github.com/GarthDB/microblogger#readme",
  "dependencies": {
    "express": "^4.14.1",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "revue": "^3.0.0",
    "vue": "^2.1.10",
    "vue-server-renderer": "^2.1.10"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2015-node": "^6.1.1",
    "babel-watch": "^2.0.6",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.8",
    "eslint": "^3.16.0",
    "eslint-config-garthdb": "^0.2.0",
    "vueify": "^9.4.0",
    "watchify": "^3.9.0"
  }
}
